<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.juand.graphmsgv10.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/iconomsg2">

    <TextView
        android:text="Si desea continuar, busque usuarios activos. La conexi칩n bluetooth se iniciar치 autom치ticamente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="21sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        tools:ignore="HardcodedText"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="Has iniciado sesion correctamente!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        tools:ignore="HardcodedText"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBluetooth"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button
        android:text="Cerrar Sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LogoutBtn"
        android:onClick="cerrarSesion"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <TextView
        android:text="Si desea salir, cierre la sesi칩n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="24sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/LogoutBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />


</RelativeLayout>
